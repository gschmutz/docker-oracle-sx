<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.oracle.cep</groupId>
        <artifactId>visualizer</artifactId>
        <version>12.1.3.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.bea.wlevs</groupId>
    <artifactId>visualizer.jmxhttpadapter</artifactId>
    <packaging>jar</packaging>
    <name>Visualizer.jmxhttpadapter</name>
    <url>http://maven.apache.org</url>
    <dependencies>
        <dependency>
            <groupId>yworks</groupId>
            <artifactId>y</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>yworks</groupId>
            <artifactId>yfiles-server</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>yworks</groupId>
            <artifactId>GraphML</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.bea.wlevs</groupId>
            <artifactId>visualizer.httpadapter</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.bea.wlevs</groupId>
            <artifactId>visualizer.flex</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>commons-fileupload</groupId>
            <artifactId>commons-fileupload</artifactId>
            <version>1.2.2</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>1.4</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>mx4j</groupId>
            <artifactId>mx4j.tools</artifactId>
            <version>3.0.2</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
    <build>
        <!-- Assemble all the compiled artifacts for packaging -->
        <resources>
            <resource>
                <directory>${project.build.directory}/pre-package</directory>
                <excludes>
                    <exclude>**/WEB-INF/*</exclude>
                    <exclude>**/META-INF/*</exclude>
                    <exclude>**/*/VisualizerActivator.class</exclude>
		    <exclude>**/.ade_path/**</exclude>
                </excludes>
                <targetPath>${project.build.outputDirectory}/WEB-INF/classes</targetPath>
            </resource>
            <resource>
                <directory>${project.build.directory}/pre-package</directory>
                <includes>
                    <include>**/*/VisualizerActivator.class</include>
                </includes>
		<excludes>
		  <exclude>**/.ade_path/**</exclude>
		</excludes>
                <targetPath>${project.build.outputDirectory}</targetPath>
            </resource>
            <resource>
                <directory>${project.build.directory}/pre-package</directory>
                <includes>
                    <include>WEB-INF/*</include>
                    <include>META-INF/MANIFEST.MF</include>
                </includes>
		<excludes>
		  <exclude>**/.ade_path/**</exclude>
		</excludes>
                <targetPath>${project.build.outputDirectory}</targetPath>
            </resource>
            <resource>
                <directory>${project.build.directory}/flex</directory>
                <targetPath>${project.build.outputDirectory}</targetPath>
		<excludes>
		  <exclude>**/.ade_path/**</exclude>
		</excludes>
            </resource>
            <resource>
                <directory>${project.basedir}/../httpadapter/src/main/resources</directory>
                <excludes>
                    <exclude>**/bnd/*</exclude>
		  <exclude>**/.ade_path/**</exclude>
                </excludes>
                <targetPath>${project.build.outputDirectory}</targetPath>
            </resource>
            <resource>
                <directory>${project.basedir}/../flex/src</directory>
                <includes>
                    <include>assets/epn/**</include>
                    <include>assets/cluster/**</include>
                </includes>
		<excludes>
		  <exclude>**/.ade_path/**</exclude>
		</excludes>
                <targetPath>${project.build.outputDirectory}</targetPath>
            </resource>
            <resource>
                <directory>${project.build.directory}/dependency</directory>
                <includes>
                    <include>commons-fileupload*.jar</include>
                    <include>commons-io*.jar</include>
                    <include>y*.jar</include>
                    <include>Graph*.jar</include>
                    <include>mx4j*.jar</include>
                </includes>
		<excludes>
		  <exclude>**/.ade_path/**</exclude>
		</excludes>
                <targetPath>${project.build.outputDirectory}/WEB-INF/lib</targetPath>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.2</version>
                <executions>
                    <execution>
                        <id>unpack.visualizer</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.bea.wlevs</groupId>
                                    <artifactId>visualizer.httpadapter</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/pre-package</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack.flex</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.bea.wlevs</groupId>
                                    <artifactId>visualizer.flex</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/flex</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy.dependencies</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>com.oracle.cep</groupId>
        <artifactId>visualizer</artifactId>
        <version>12.1.3.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.bea.wlevs</groupId>
    <artifactId>visualizer.flex</artifactId>
    <packaging>jar</packaging>
    <name>Visualizer.flex</name>
    <url>http://maven.apache.org</url>
    <properties>
        <nls.module.dir>${global.basedir}/wptg/cep/wlevs_cql/release/nls/modules</nls.module.dir>
    </properties>
    <dependencies>
        <dependency>
            <groupId>com.bea.wlevs</groupId>
            <artifactId>visualizer.flex.resource</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>../../../release/nls/modules/visualizer/flex/target/classes/</directory>
                <includes>
                    <include>**/*_*.properties</include>
                </includes>
		<excludes>
		  <exclude>**/.ade_path/**</exclude>
		</excludes>
            </resource>
            <resource>
                <directory>.</directory>
                <targetPath>${project.build.directory}</targetPath>
                <includes>
                    <include>templates/**</include>
                    <include>locale/**</include>
                    <include>libs/**/*</include>
                    <include>src/**</include>
                </includes>
                <excludes>
                    <exclude>**/.ade_path/**</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>.</directory>
                <includes>
                    <include>locale/**/*</include>
                    <include>*.xsd</include>
                    <include>*.swf</include>
                    <include>*.html</include>
                </includes>
                <excludes>
                    <exclude>**/.ade_path/**</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
                <excludes>
                    <exclude>**/.ade_path/**</exclude>
                </excludes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.3.1</version>
                <configuration>
                    <archive>
                        <manifestFile></manifestFile>
                    </archive>
                    <includes>
                        <include>*.swf</include>
                        <include>*.html</include>
                        <include>*.js</include>
                        <include>**/*.xml</include>
                        <include>assets/epn/**</include>
                        <include>**/images/**/*</include>
                        <include>**/history/**/*</include>
                        <include>**/modules/**/*</include>
                    </includes>
                    <excludes>
                        <exclude>license.xml</exclude>
                        <exclude>**/.ade_path/**</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.2</version>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.bea.wlevs</groupId>
                                    <artifactId>visualizer.flex.resource</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.outputDirectory}</outputDirectory>
                                    <includes>assets/epn/**</includes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.bea.wlevs</groupId>
                                    <artifactId>visualizer.flex.resource</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/libs</outputDirectory>
                                    <includes>visualizer_resource.swc</includes>
                                </artifactItem>
                            </artifactItems>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>flex-build</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>process-resources</phase>
                                <configuration>
                                    <tasks>
                                        <property name="FLEX_HOME" value="${basedir}/../flex_resource/target/flex_sdk"/>
                                        <property name="project.build.outputDirectory"
                                                  value="${project.build.outputDirectory}"/>
                                        <property name="project.build.directory" value="${project.build.directory}"/>
                                        <property name="nls.module.dir" value="${nls.module.dir}"/>
                                        <ant antfile="build-mxmlc.xml" target="compile.flex"/>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>build-only</id>
            <activation>
                <property>
                    <name>skipFlex</name>
                    <value>true</value>
                </property>
            </activation>
        </profile>
    </profiles>
</project>
